{
  "manifest_version": 3,
  "name": "QuickTube AI",
  "version": "1.2.0",
  "description": "YouTube動画の要約をGeminiで簡単に取得できるChrome拡張機能",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "gemini_auto_submit.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "QuickTube AI"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}